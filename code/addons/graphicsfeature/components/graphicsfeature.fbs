include "foundation/math.fbs";

namespace GraphicsFeature;

enum ProjectionMode : byte
{
    Perspective,
    Orthographic
}

table Model
{
    resource: string;
    graphics_entity_id: uint = 0xffffffff;
}

table Camera
{
    view_handle: uint = 0xffffffff;
    local_transform: Flat.Mat4 (native_inline);
    field_of_view: float;
    aspect_ratio: float;
    z_near: float;
    z_far: float;
    orthographic_width: float;
    projection_mode: ProjectionMode;
}
