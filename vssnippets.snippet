    			<Object>
    				<ID>Classname</ID>
    				<Type>String of text</Type>
    				<Default>Class</Default>
    			</Object>    			
    		</Declarations>
    		<Code Language="cpp">
    			<![CDATA[//------------------------------------------------------------------------------
/**
*/
void
$Classname$::$end$()
{
	//FIXME: empty
}

    			]]>
    		</Code>
    	</Snippet>
    </CodeSnippet>


<!-- source  -->
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Nebula Namespace Source</Title>
            <Shortcut>nsource</Shortcut>
        </Header>
        <Snippet>
            <Declarations>
                <Object>
                    <ID>filename</ID>
                    <Type>String of text</Type>
                    <ToolTip>Write a description of this header file.</ToolTip>
                    <Default>WRITE ME OR ELSE!</Default>
                </Object>
                <Object>
                    <ID>namespace</ID>
                    <Type>Namespace</Type>
                    <ToolTip>Select a namespace.</ToolTip>
                    <Default>Base</Default>
                </Object>
                <Object>
                    <ID>year</ID>
                    <Type>Current year</Type>
                    <ToolTip>Please insert this year, and not some other year...</ToolTip>
                    <Default>2021</Default>
                </Object>
            </Declarations>
            <Code Language="cpp">
                <![CDATA[//------------------------------------------------------------------------------
//  @file $filename$.cc
//  @copyright (C) $year$ Individual contributors, see AUTHORS file
//------------------------------------------------------------------------------
#include "foundation/stdneb.h"
#include "$filename$.h"
namespace $namespace$
{
$end$
} // namespace $namespace$
                ]]>
            </Code>
        </Snippet>
    </CodeSnippet>
	
