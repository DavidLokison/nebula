{
	"version": 2,
	"engine": "Nebula",
	"sub_script": true,
	"framescript": {
		"textures": [
			{
				"name": "LocalLightShadow",
				"format": "R32G32F",
				"width": 512,
				"height": 512,
				"layers": 16,
				"usage": "Render",
				"type": "Texture2DArray"
			},
			{
				"name": "SunShadowDepth",
				"format": "D32S8",
				"width": 1024,
				"height": 1024,
				"layers": 4,
				"usage": "Render",
				"type": "Texture2DArray"
			}
		],

		"submission": {
			"name": "Shadows",
            "wait_for_queue": "Graphics",
            "queue": "Graphics",
            "_comment": "Render and blur shadow maps",
			"ops": {
                "pass": {
                    "name": "Sun Shadows Pass",
                    "depth_stencil": {
                        "name": "SunShadowDepth",
                        "clear": 1,
                        "store": true
                    },

                    "subpass": {
                        "name": "Sun Shadows",
                        "subpass_dependencies": [],
                        "depth": true,
                        "subgraph": {
                            "name": "Sun Shadows"
                        }
                    },
                },
		
				"pass": {
					"name": "Local Shadows Pass",
					"attachments": [
						{
							"name": "LocalLightShadow",
							"clear": [ 1000, 1000, 0, 0 ],
							"store": true
						}
					],
					"subpass": {
						"name": "Spotlight Shadows",
						"subpass_dependencies": [],
						"attachments": [ "LocalLightShadow" ],
						"depth": false,
						"subgraph": {
							"name": "Spotlight Shadows"
						}
					}
				},
		
				"subgraph": {
					"name": "Spotlight Blur"
				},
				"subgraph": {
					"name": "Sun Blur"
				}
			}
		}
	}
}